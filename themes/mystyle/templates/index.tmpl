## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="base.tmpl"/>
<%block name="content">
% for post in posts:
<div class="postbox">
	<h1 class="post-title"><a href="${post.permalink()}">${post.title()}</a></h1>
  <small class="post-title">
		<time class="published" datetime="${post.date.isoformat()}">
			${post.formatted_date(date_format)}</time>
		</small>
  <hr>
  ${post.text(teaser_only=index_teasers)}
  % if post.meta('comments'):
  ${comments.comment_link(post.permalink(), post.base_path)}
  % endif
</div>
% endfor
${helper.html_pager()}
${comments.comment_link_script()}
${helper.mathjax_script(posts)}
</%block>
